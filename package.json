  "nodemonConfig": {
    "exec": "npm run start",
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "public/*",
      "test/*",
      "integration_tests/*",
      "public/*",
      "govuk_modules/*",
      "assets/*"
