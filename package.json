{
  "name": "hpa-ui",
  "version": "2.0.0",
  "description": "Historical Prisoner Application",
  "main": "server.js",
  "engines": {
    "node": "^14",
    "npm": "^7"
  },
  "scripts": {
    "clean": "rm -rf public govuk_modules .port.tmp *.log build uploads test-results.xml",
    "build": "npm run clean && ./build.sh && webpack",
    "start": "node .",
    "start:dev": "npm run build && nodemon",
    "test": "NODE_ENV=test mocha --recursive test --exit",
    "lint": "eslint . --cache --max-warnings 0",
    "record-build-info": "node ./bin/record-build-info",
    "security_audit": "npx audit-ci --config audit-ci.json"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:noms-digital-studio/iis.git"
  },
