extends ../subject

block subject-details
    div.column-two-thirds
        if (subject.offencesInCustody && subject.offencesInCustody.length !== 0)
            each val,index in subject.offencesInCustody
                div.grid-row.list-row.listItem
                    div.column-full(class="offenceInCustody")
                        div.left-border
                            span.quiet #{moment(val.date).format('DD/MM/YYYY')}
                            |  #{setCase.capitalWithAcronyms(val.establishment)}
                        div.left-border
                            span.bold #{setCase.capital(val.outcome)}
                            |  - #{setCase.capitalWithAcronyms(val.charge)}
                        if (val.punishments)
                            div.left-border
                                ul.list.list-bullet.no-margin
                                    each item in val.punishments
                                        li #{setCase.capital(item.punishment)} (#{item.duration} days)

        else
            span= noResultsText
