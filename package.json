    "url": "https://github.com/noms-digital-studio/iis/issues"
  },
  "homepage": "https://github.com/noms-digital-studio/iis#readme",
  "dependencies": {
    "agentkeepalive": "^4.5.0",
    "applicationinsights": "^2.7.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.2",
    "case": "^1.6.3",
    "compression": "^1.7.4",
    "config": "^3.3.7",
    "cookie-session": "^2.0.0",
    "csurf": "^1.11.0",
    "eslint": "^8.10.0",
    "eslint-config-google": "^0.14.0",
    "express": "^4.19.2",
    "express-request-id": "^1.4.0",
    "express-winston": "^2.3.0",
