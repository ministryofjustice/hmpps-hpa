    "@babel/preset-env": "^7.22.10",
    "@types/jsonwebtoken": "^8.5.8",
    "ajv": "^8.17.1",
    "babel-loader": "^9.1.3",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "istanbul": "^0.4.5",
    "jsdom": "^21.1.2",
    "jsdom-global": "^3.0.2",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.0.2",
    "nock": "^13.3.3",
    "nodemon": "^3.0.1",
    "proxyquire": "^1.7.11",
    "sass": "^1.49.9",
