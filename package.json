    "jwt-decode": "^3.1.2",
    "moment": "^2.29.4",
    "passport": "^0.6.0",
    "passport-oauth2": "^1.7.0",
    "path": "^0.12.7",
    "pdfkit": "^0.8.1",
    "pdfmake": "^0.2.7",
    "prompt": "^1.2.2",
    "pug": "3.0.3",
    "require-dir": "^1.2.0",
    "run-sequence": "^2.2.1",
