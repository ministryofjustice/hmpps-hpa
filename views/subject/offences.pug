extends ../subject

block subject-details
    div.column-two-thirds
        if (subject.offences && subject.offences.length !== 0)
            each val, index in subject.offences
                div.grid-row.list-row.listItem
                        div.column-full(class="offence")
                            div.left-border
                                span.quiet.block #{moment(val.date).format('DD/MM/YYYY')}
                                span Offence code #{val.code}

                            div.left-border
                                span #{setCase.capitalWithAcronyms(val.establishment)}

        else
            span= noResultsText
